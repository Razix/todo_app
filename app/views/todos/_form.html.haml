= form_for @todo, html: { class: 'form-horizontal' } do |f|
  = render 'errors'
  .control-group
    = f.label :value, 'What you need todo', class: 'control-label'
    .controls
      = f.text_field :value, class: 'text_field'
  .control-group
    = f.label 'Todo tags:', class: 'control-label'
    .controls
      = f.collection_check_boxes :tag_ids, Tag.all, :id, :name, item_wrapper_class: 'checkbox inline'
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), todos_path, class: 'btn'
